<h1>Recipes</h1>
<header>
  <a href="/logout">Logout</a>
  <a href="/">Home</a>
  <a href="/ingredients">Ingredients</a>
</header>
<body>
  <ul>
    {{#each recipes}}
      <li>{{this.title}}</li>
      <li>flavors:
        {{#each this.flavors}}
          {{this}}
        {{/each}}
      </li>

      <li>Ingredients:
        {{#each this.ingredients}}
          <ul>
            <li>{{this.name}}</li>
            <ul>
              <li>flavors:
                {{#each this.flavors}}
                  {{this}}
                {{/each}}
              </li>
              <li>Quanitity: {{this.quantity}} {{this.measurement}}</li>
            </ul>
          </ul>
        {{/each}}
      </li>

      <li>Instructions: {{this.instructions}}</li>
      <li>Servings: {{this.servings}}</li>
      <li>Ready in: {{this.readyInMinutes}} minutes</li>
      <li><a href={{this.sourceUrl}}>Source</a></li>
      <li>Comments:
        {{#each this.comments}}
          {{this}}
        {{/each}}
      </li>
      <li>Likes: {{this.likes}}</li>
      <li>Dislikes: {{this.dislikes}}</li>
      <li>Certified: {{this.certified}}</li>
      {{#if (eq user.role "admin")}}
        <li>
          <label for="deleteRecipeButton">Delete Recipe</label>
          <input
            type="button"
            name="deleteRecipeButton"
            id="deleteRecipeButton"
          />
        </li>
      {{/if}}
    {{/each}}
  </ul>
</body>
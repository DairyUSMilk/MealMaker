<h1>Create Ingredients</h1>
<header>
  <a href="/logout">Logout</a>
  <a href="/recipes">Recipes</a>
  <a href="/">Home</a>
</header>
<div>
  <form id="ingredient-form" action="/ingredients/add" method="POST">
    <label for="name">Ingredient Name:</label>
    <input type="text" name="name" id="name" />

    <label for="flavors">Flavors/Cuisines(separated by commas):</label>
    <input type="text" name="flavors" id="flavors" />

    <label for="quantity">Quantity:</label>
    <input type="text" name="quantity" id="quantity" />

    <label for="measurement">Measurement:</label>
    <input type="text" name="measurement" id="measurement" />

    <button type="submit">Submit</button>
  </form>

  <div id="error">
    <div class="errorText">
      {{#if error}}
        {{error}}
      {{/if}}
    </div>
  </div>
</div>